<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/result_overlay_background_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/result_overlay_background"/>

    <View
        android:id="@+id/result_overlay_centered_invisible_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/result_overlay_face_lost"
        android:layout_width="@dimen/result_overlay_image_size"
        android:layout_height="@dimen/result_overlay_image_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="285dp"
        android:layout_marginRight="45dp"
        android:layout_toLeftOf="@+id/result_overlay_centered_invisible_view"/>

    <ImageView
        android:id="@+id/result_overlay_face_won"
        android:layout_width="@dimen/result_overlay_image_size"
        android:layout_height="@dimen/result_overlay_image_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="320dp"
        android:layout_marginLeft="48dp"
        android:layout_toRightOf="@+id/result_overlay_centered_invisible_view"/>

    <TextView
        android:id="@+id/result_overlay_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_overlay_background_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/result_lost_subtitle"
        android:textColor="@color/tab_text_color"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/result_overlay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_overlay_subtitle"
        android:layout_centerHorizontal="true"
        android:text="@string/result_won_title"
        android:textColor="@color/green_normal"
        android:textSize="50dp"/>

</RelativeLayout>