<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elpassion.vielengames">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />


    <application
        android:name="com.elpassion.vielengames.VielenGamesApp"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:logo="@drawable/app_logo"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.elpassion.vielengames.ui.LauncherActivity"
            android:theme="@style/AppTheme.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elpassion.vielengames.ui.LoginActivity"
            android:theme="@style/AppTheme.Login" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:theme="@style/AppTheme.Login" />
        <activity
            android:name="com.elpassion.vielengames.ui.MainActivity"
            android:label="Games" />
        <activity
            android:name="com.elpassion.vielengames.ui.GameActivity"
            android:label="Games" />
        <activity
            android:name="com.elpassion.vielengames.ui.ResultOverlayActivity"
            android:theme="@style/AppTheme.Overlay" />
        <activity
            android:name="com.elpassion.vielengames.ui.GameHelpOverlayActivity"
            android:theme="@style/AppTheme.Overlay" />

    </application>

</manifest>
